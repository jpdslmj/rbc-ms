		  		  <if test="gangmasterName != null and gangmasterName != ''"> and gangmaster_name = #{gangmasterName} </if>
		  		  <if test="checkTime != null and checkTime != ''"> and check_time = #{checkTime} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
