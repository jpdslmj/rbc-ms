	<delete id="remove">
		delete from web_security_check where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from web_security_check where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>