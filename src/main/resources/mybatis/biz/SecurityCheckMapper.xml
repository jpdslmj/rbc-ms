<mapper namespace="com.rbc.biz.dao.SecurityCheckDao">

	<select id="get" resultType="com.rbc.biz.domain.SecurityCheckDO">
		select `id`,`security_project`,`description`,`status`,`gangmaster_no`,`gangmaster_name`,`check_time`,`remark`,`create_time`,`update_time` from web_security_check where id = #{value}
	</select>

	<select id="list" resultType="com.rbc.biz.domain.SecurityCheckDO">
		select `id`,`security_project`,`description`,`status`,`gangmaster_no`,`gangmaster_name`,`check_time`,`remark`,`create_time`,`update_time` from web_security_check
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="securityProject != null and securityProject != ''"> and security_project = #{securityProject} </if>
		  		  <if test="description != null and description != ''"> and description = #{description} </if>
